{% import "__includes/__macro.njk" as macro %}<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>{% if id != "home" %}{% if browserTitle != "" %}{{ browserTitle | escape }}{% else %}{{ name | escape }}{% endif %}{% if global.titleSuffix != "" %} - {% endif %}{% endif %}{{ global.titleSuffix | escape }}</title>
    {% if description != "" %}<meta name="description" content="{{ description | escape }}">{% endif %}
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {% if global.gtmContainerId != "" %}
    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','{{ global.gtmContainerId }}');</script>
    <!-- End Google Tag Manager -->
    {% endif %}  

{#
  <link rel="manifest" href="site.webmanifest">
  <link rel="apple-touch-icon" href="icon.png">
  <!-- Place favicon.ico in the root directory -->
#}

    <link href="{{ 'style.min.css' | style }}" type="text/css" rel="stylesheet"/>
    {% block styles %}{% endblock %}

    <script src="{{ '__head.min.js' | script }}"></script>
</head>

<body>

    {% if global.gtmContainerId != "" %}
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id={{ global.gtmContainerId }}"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    {% endif %}

    <p>LAYOUT</p>
    {% block content %}{% endblock %}

    <script src="{{ 'modernizr-3.6.0.min.js' | script }}"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script>window.jQuery || document.write('<script src="{{ 'jquery-3.3.1.min.js' | script }}"><\/script>')</script>
    <script src="{{ '__body.min.js' | script }}"></script>
    <script src="{{ 'common.min.js' | script }}"></script>
    {% block scripts %}{% endblock %}

</body>
</html>